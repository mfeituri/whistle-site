---
import "../styles/global.css";

const features = [
  {
    title: "Award-Based Engagement",
    description: "Users can earn aura and give Reddit-style awards to content they truly enjoy.",
    image: "/placeholder.jpg",
  },
  {
    title: "Aura Farming",
    description: "Engage meaningfully — like, comment, or upload to earn aura and increase your influence.",
    image: "/placeholder.jpg",
  },
  {
    title: "Video-Centered Feed",
    description: "A modern, scrollable feed similar to TikTok but powered by community-driven rewards.",
    image: "/placeholder.jpg",
  },
  {
    title: "Built for Android",
    description: "Whistle is built in Kotlin using Jetpack Compose, Firebase, and the MVVM architecture.",
    image: "/placeholder.jpg",
  },
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Whistle - An Engaging Video Sharing App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-gradient-to-b from-[#4d179a] via-[#a800b7] to-[#ec003f] text-white font-sans scroll-smooth">

    <!-- Hero -->
    <section class="py-20 px-6 text-center">
      <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-xl max-w-3xl mx-auto p-10 text-gray-800">
        <img src="/logo.png" alt="Whistle Logo" class="w-24 h-24 mx-auto mb-6" />
        <h1 class="text-5xl font-bold mb-4">Whistle</h1>
        <p class="text-lg max-w-xl mx-auto mb-6">
          An engaging video sharing app that combines TikTok-style feeds with Reddit-style community awards.
        </p>
        <a href="#" class="bg-blue-600 text-white px-6 py-3 rounded-xl text-lg hover:bg-blue-700 transition">
          Download on Google Play
        </a>
      </div>
    </section>

    <!-- Features (stacked) -->
    {features.map((feature) => (
      <section class="py-16 px-6 text-gray-900 text-center">
        <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-lg max-w-4xl mx-auto p-10">
          <img src={feature.image} alt={feature.title} class="rounded-xl shadow mb-6 w-full max-h-96 object-cover" />
          <h3 class="text-3xl font-bold mb-4 text-purple-800">{feature.title}</h3>
          <p class="text-lg max-w-2xl mx-auto">{feature.description}</p>
        </div>
      </section>
    ))}

    <!-- How It Works -->
    <section class="py-20 px-6 text-gray-900">
      <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-lg max-w-4xl mx-auto p-10">
        <h2 class="text-3xl font-bold text-center mb-8 text-purple-800">How It Works</h2>
        <p class="mb-4">
          Whistle is built entirely in Kotlin using Jetpack Compose for UI, Firebase for backend storage, and Room (SQLite) for local data. It follows the MVVM architecture with StateFlow for state management.
        </p>
        <p class="mb-4">
          We compile against Android API 35 (Vanilla Ice Cream), target API 34 (Upside Down Cake), and support API 31+ (Snow Cone). Screens are composed using declarative functions with Material 3 components.
        </p>
      </div>
    </section>

    <!-- Demo Video -->
    <section class="py-20 px-6 text-center text-gray-900">
      <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-lg max-w-4xl mx-auto p-10">
        <h2 class="text-3xl font-bold mb-6 text-purple-800">Watch Whistle in Action</h2>
        <video src="/demo.mp4" controls class="mx-auto rounded-xl shadow-lg w-full max-w-3xl" />
      </div>
    </section>

    <!-- Team Info -->
    <section class="py-16 px-6 text-center text-gray-900">
      <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-lg max-w-3xl mx-auto p-10">
        <h2 class="text-2xl font-bold mb-4 text-purple-800">Meet the Team</h2>
        <p>Cristian M, Melanie P, Mohamed F, Chandler V</p>
        <p class="mt-2">Professor: Dr. Jeff Paone</p>
        <p class="mt-2">Course: CSCI448 - Mobile Application Development</p>
        <p class="mt-2">Colorado School of Mines – Spring 2025</p>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 text-center bg-white/20 backdrop-blur text-sm text-white/80">
      &copy; 2025 Whistle App. All rights reserved.
    </footer>
  </body>
</html>
